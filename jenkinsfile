            steps {
                sh 'mvn deploy'
                }
        }
         stage('tomcat') {
             steps {
                 sh 'wget --user admin --password admin123 http://184.72.78.153:8081/nexus/service/local/repositories/releases/content/com/web/cal/WebAppCal/1.2.4/WebAppCal-1.2.4.war' }
